@model BabyInABag.Models.Colors

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-contents">
    <!-- Panel -->
    <div class="main">
        <font size="4">
            <h2 id="admin-header-text">ADD COLOR</h2>
            <label id="admin-header-text" style="color:blue">@Html.ViewBag.psuccess</label>
            <hr>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table align="center">
                    <tr>
                        <td>
                            <b>@Html.LabelFor(model => model.Color_Name, htmlAttributes: new { @class = "control-label col-md-2" }) </b>

                            @Html.EditorFor(model => model.Color_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Color_Name, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>  @Html.LabelFor(model => model.Color_HEX, htmlAttributes: new { @class = "control-label col-md-2" }) </b>
                            &nbsp;
                            @Html.EditorFor(model => model.Color_HEX, new { htmlAttributes = new { @class = "form-control", type = "color", value = "#ff0000" } })

                            @Html.ValidationMessageFor(model => model.Color_HEX, "", new { @class = "text-danger" })
<td>
                    </tr>

                    <tr>
                        <td style="text-align:center;">
                            <br />
                            <input type="submit" value="Create"  class="btn btn-dark" />
                        </td>
                    </tr>
                </table>
        
    }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
            </font>
        </div>
    </div>


       

