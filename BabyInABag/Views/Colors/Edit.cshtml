@model BabyInABag.Models.Colors

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-contents">
    <!-- Panel -->
    <div class="main">



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h2 id="admin-header-text" style="border-bottom-color: black">Edit Color</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Color_Id)

            <font size="4">
                <table align="center">
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Color_Name, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.Color_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Color_Name, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Color_HEX, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Color_HEX, new { htmlAttributes = new { @class = "form-control", type = "color", value = Model.Color_HEX } })
                            @Html.ValidationMessageFor(model => model.Color_HEX, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:center;">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </td>
                    </tr>
                </table>
            </font>

        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>