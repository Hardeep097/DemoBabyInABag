@model BabyInABag.Models.Colors

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-contents">
    <!-- Panel -->
    <div class="main">

        <h2 id="admin-header-text">DELETE</h2>

        <h3 id="admin-header-text">Are you sure you want to delete this?</h3>


        <font size="4">
            <table align="center">

                <tr>
                    <td>
                        <b>@Html.LabelFor(model => model.Color_Name, htmlAttributes: new { @class = "control-label col-md-2" }) </b>
                        @Html.DisplayFor(modelItem => Model.Color_Name)
                        @*@Html.EditorFor(model => model.Color_Name, new { htmlAttributes = new { @class = "form-control",  } })
        @Html.ValidationMessageFor(model => model.Color_Name, "", new { @class = "text-danger" })*@
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.LabelFor(model => model.Color_HEX, htmlAttributes: new { @class = "control-label col-md-2" }) </b>
                        &nbsp;
                        <input type="color" value=@Model.Color_HEX disabled="disabled" />
                    </td>
                </tr>
                <tr>
                    <td style="text-align:center;">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <br />
                            <input type="submit" value="Delete" class="btn btn-dark" />



                        }

                    </td>
                </tr>
            </table>
        </font>

       

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>