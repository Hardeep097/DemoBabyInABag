@using BabyInABag.Models
@model ProductCategory

@{

    ViewBag.Title = "CustomizeProduct";
}

<!-- Contact Section -->

<main>
    <section class="section-first section-spacing products">
        </section>
        <div class="w3-row">
            <div class="w3-col w3-container m6 l5 ">
                <img id="image1" src="@Url.Content(Model.Default_Image)" style="width:300px; height:400px;">
            </div>
            @using (Html.BeginForm("CustomizeProduct", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                @Html.HiddenFor(model => model.Product_Category_Id);
                @Html.HiddenFor(model => model.Product_Category);
                @Html.HiddenFor(model => model.Default_Price);
                @Html.HiddenFor(model => model.Default_Image);

            <div class="w3-col w3-container m6 l7">
                <h2>@Html.DisplayFor(model => model.Product_Category)</h2>
                <p>Customize your own product to fit the needs of your baby, whether its a blanket, boots, or a sleeping bag.</p>

                <h4 id="cprice">CAD @Html.DisplayFor(model => model.Default_Price)</h4>


                <h4>Quantity</h4>
                <select name="quantity">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>

                <br>


                <div>
                    <h4>Color</h4>
                    <div>
                        <select name="color">
                            @foreach (var item in ViewBag.colors)
                            {
                                String name = item.Color_Name;
                                String hex = item.Color_HEX;
                                <option value=@name style="background-color:@hex;width:40px;">@name</option>
                            }
                        </select>
                    </div>

                   


                </div>
                <br />
                <h4>
                    Additional Requirements
                    <i class="fa fa-info-circle" title="You can find the options for this product on the FAQ page."></i>
                </h4>
                <textarea name="additionalRequirements" rows="2" cols="19" style="resize:none; width:100%" placeholder="Enter any additional requirements you want for your customized product."></textarea>
                <br />
                <button id="buttoncustomize" type="submit">Save</button>
                <button id="buttoncustomize">Clear</button>
            </div>
            }
        </div>
    </main>

        <script>
            $(document).ready(function () {

                var colors = document.getElementById('color');
                var selectedColor = document.getElementById('color').value;
                var colorbox = document.getElementById('colorbox');
                colors.onchange = function () {
                    colorbox.css("background-color:", selectedColor);
                }
           
            
            });
        </script>
