@model BabyInABag.Models.ProductCategory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" href="~/Styles/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Oswald' rel='stylesheet'>
</head>

<div class="main-contents">
    <!-- Panel -->
    <div class="main">
      
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h2 id="admin-header-text" style="border-bottom-color: black">Edit Product Category</h2>



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Product_Category_Id)
                <font size="4">
                    <table align="center">
                        <tr>
                            <td>

                                @Html.LabelFor(model => model.Product_Category, htmlAttributes: new { @class = "control-label col-md-2", style = "margin: 0px;" })
                                @Html.EditorFor(model => model.Product_Category, new { htmlAttributes = new { @class = "form-control", style = "width:100%; height:30px;font-size: 16px;" } })
                                @Html.ValidationMessageFor(model => model.Product_Category, "", new { @class = "text-danger" })
                            </td>
                        </tr>

                        <tr>
                            <td>
                                @Html.LabelFor(model => model.Default_Price, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Default_Price, new { htmlAttributes = new { @class = "form-control", style = "width:100%; height:30px;font-size: 16px;" } })
                                @Html.ValidationMessageFor(model => model.Default_Price, "", new { @class = "text-danger" })
                            </td>
                        </tr>

                        <tr>
                            <td>
                                @Html.ViewBag.errorimage
                                <p style="margin: 0px;">Image</p>
                                <input type="file" placeholder="Add Description Here" name="ImageFile" >
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:center;">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </td>
                        </tr>
                    </table>
                </font>

                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                
</div>
  </div>