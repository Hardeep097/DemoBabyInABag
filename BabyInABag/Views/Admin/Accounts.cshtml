
@model BabyInABag.Models.RegisterViewModel
@{
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



    <!-- Contents -->
    <div class="main-contents">
        <!-- Panel -->
        <div class="main">
            <h2 id="admin-header-text" style="border-bottom-color: black">Account Management</h2>
            <div class="container" style=" text-align:center;font-size: 20px;">
                <hr>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <table class="w3-table w3-hoverable">

                        <tr>
                            <th style="text-align: center; width: 50%;">Create New Admin Account</th>
                            <th style="text-align: center; width: 50%;">Reset/Disable Account</th>
                        </tr>
                        <tr>
                            <td style="text-align: center; width: 50%;">
                                <div class="form-group">

                                    <div class="col-md-10">
                                        @*<h2>
        @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()
                                        </h2>*@
                                        <h4 style="margin-bottom:5px; color:green;"> @TempData["acsuccess"]</h4>
                                        <h4 style="margin-bottom:5px; color:red;">   @TempData["acerror"]</h4>

                                        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name", style = "margin-bottom:5px;", required = "required" } })
                                        <br />

                                        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name", style = "margin-bottom:5px;", required = "required" } })
                                        <br />

                                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", style = "margin-bottom:5px;", required = "required", @type = "email" } })

                                        <br />
                                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

                                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", id = "password", placeholder = "Password", style = "margin-bottom:5px;", required = "required" } })

                                        <br />

                                        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", id = "confirm_password", placeholder = "Confirm Password", style = "margin-bottom:5px;", required = "required" } })
                                        <br />
                                        <span id='message'></span>
                                        <br />
                                        <input style="" margin-bottom:5px", hidden="true" name="hackingKey" value="TheyLiveWeSleep">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-default" value="Register" />
                                    </div>
                                </div>
                            </td>

                            <td style="text-align: center; width: 50%;">
                                <input style="padding:5px; font-family: oswald; border-radius: 4px; width: 80%;" type="text" placeholder="Enter Username" name="username">
                                <br />
                                <br />
                                <button style="width: 30%;font-family: oswald;" type="submit" class="signupbtn">Disable</button>
                                <button style="width: 30%;font-family: oswald;" type="submit" class="signupbtn">Reset</button>
                            </td>
                        </tr>
                    </table>
                }



            </div>
            <br />
            <br />
            <br />

        </div>
        <!-- End of Panel -->
    </div>
    <!-- End of Contents -->
   

