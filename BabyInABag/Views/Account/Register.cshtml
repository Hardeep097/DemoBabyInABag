@model BabyInABag.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<main style="text-align:center">
    <div class="wrapper">

        <section class="section-first section-spacing products">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                <h3>Customer Registration</h3>
                <hr style="max-width:500px;" />
                @Html.ValidationSummary("", new { @class = "text-danger" })



                <div class="form-group">

                    <div>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "w3-input w3-border", Style = "width:70%;max-width:400px;height:20%", placeholder = "First Name" })
                    </div>
                </div>

                <div class="form-group">

                    <div>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "w3-input w3-border", Style = "width:70%;max-width:400px;height:10%", placeholder = "Last Name" })
                    </div>
                </div>

                <div class="form-group">

                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "w3-input w3-border", Style = "width:70%;max-width:400px;height:10%", placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group">

                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "w3-input w3-border", Style = "width:70%;max-width:400px;height:10%", placeholder = "Password" })
                    </div>
                </div>
                <div class="form-group">

                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "w3-input w3-border", Style = "width:70%;max-width:400px;height:10%", placeholder = "Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-dark" value="Register" />
                    </div>
                </div>
            }
            <hr style="max-width:500px;" />
        </section>

    </div>
</main>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
