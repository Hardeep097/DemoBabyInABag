@model BabyInABag.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<main style="text-align:center">
    <section class="section-first section-spacing products">
  


        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            @Html.AntiForgeryToken()
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })



            <div class="form-group">
                
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FirstName, new { Style = "width:70%;height:20%", placeholder = "First Name" })
                </div>
            </div>

            <div class="form-group">
               
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.LastName, new { Style = "width:70%;height:10%", placeholder = "Last Name" })
                </div>
            </div>

            <div class="form-group">
               
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { Style = "width:70%;height:10%", placeholder = "Email" })
                </div>
            </div>
            <div class="form-group">
              
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { Style = "width:70%;height:10%", placeholder = "Password" })
                </div>
            </div>
            <div class="form-group">
               
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { Style = "width:70%; height:10%", placeholder = "Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        }
        </section>
    </main>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
